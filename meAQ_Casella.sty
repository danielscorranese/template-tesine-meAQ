\usepackage{titlesec}

% Sezioni: Grassetto, Maiuscolo, senza numero
\titleformat{\section}
  {\normalfont\large\bfseries\uppercase} % Format
  {} % Nessuna etichetta/numero
  {0pt} % Nessuna separazione dal margine
  {} % Before code

% Sottosezioni: Grassetto, Non maiuscolo, senza numero
\titleformat{\subsection}
  {\normalfont\normalsize\bfseries}
  {} % Nessuna etichetta/numero
  {0pt}
  {}

